---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'zh' | 'en';
}

const { lang = 'zh' } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-paper border-t border-ink/10 mt-30">
  <div class="container-custom py-12">
    <div class="text-center space-y-6">
      <!-- 版权信息 -->
      <p class="text-body text-ink-light">
        © {currentYear} Noto. {t('footer.rights')}
      </p>
      
      <!-- 链接 -->
      <div class="flex items-center justify-center space-x-2">
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 py-2 text-body font-medium text-ink no-underline hover:bg-accent hover:text-white"
          style="transition: none;"
          aria-label="GitHub"
        >
          GitHub
        </a>
        <a
          href="/rss.xml"
          class="px-4 py-2 text-body font-medium text-ink no-underline hover:bg-accent hover:text-white"
          style="transition: none;"
        >
          RSS
        </a>
      </div>
    </div>
  </div>
</footer>
