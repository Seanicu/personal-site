---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCard from '../../components/BlogCard.astro';

const title = 'Xiandu Blog';
const description = 'Xanoto\'s Language Space';

// Get all English blog posts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'en' && !data.draft;
});

// Sort by date and get the latest 3 posts
const latestPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<BaseLayout title={title} description={description} lang="en">
  <Header lang="en" />
  
  <main class="container-custom py-18">
    <!-- Hero Section - Asymmetric Layout -->
    <section class="grid lg:grid-cols-[25%_75%] gap-12 mb-16">
      <div class="lg:text-right">
        <h2 class="text-body-lg text-ink-light">About this blog</h2>
      </div>
      <div>
        <p class="text-body-lg text-ink-light mb-8">
          Language is a tool for thinking
        </p>
        <!-- <p class="text-body-lg text-ink-light max-w-3xl">
          Recording thoughts about language, programming, and reflection.
        </p> -->
      </div>
    </section>

    <!-- Latest Posts Section - Asymmetric Layout -->
    <section class="grid lg:grid-cols-[25%_75%] gap-12">
      <div class="lg:text-right pt-6">
        <h2 class="text-body-lg text-ink-light sticky top-24 mb-2">Blog posts</h2>
      </div>
      
      <div>
        {latestPosts.length > 0 ? (
          <div class="space-y-6">
            {latestPosts.map((post) => (
              <BlogCard post={post} lang="en" />
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-body-lg text-ink-light">No posts yet</p>
          </div>
        )}

        <div class="mt-12">
          <a
            href="/en/blog"
            class="-mx-6 block px-8 py-3 text-body no-underline font-medium text-ink decoration-accent hover:bg-accent hover:text-white hover:no-underline"
            style="transition: none;"
          >
            View all posts â†’
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</BaseLayout>
