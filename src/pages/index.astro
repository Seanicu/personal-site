---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Xerox 的个人博客';
const description = '欢迎来到我的个人博客，分享技术、思考和生活。';
---

<BaseLayout title={title} description={description} lang="zh">
  <Header lang="zh" />
  
  <main class="container-custom py-12">
    <!-- Hero Section -->
    <section class="text-center py-16">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        欢迎来到我的博客
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        分享技术、思考和生活
      </p>
    </section>

    <!-- 最新文章部分 -->
    <section class="py-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">最新文章</h2>
      <div class="text-gray-600">
        文章列表即将推出...
      </div>
    </section>
  </main>

  <Footer lang="zh" />
</BaseLayout>
