---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogCard from '../components/BlogCard.astro';

const title = 'Xanoto的语言空间';
const description = '博客|Xanoto的语言空间';

// 获取所有中文博客文章
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'zh' && !data.draft;
});

// 按日期排序并取最新的 3 篇
const latestPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<BaseLayout title={title} description={description} lang="zh">
  <Header lang="zh" />
  
  <main class="container-custom py-18">
    <!-- Hero Section - 非对称布局 -->
    <section class="grid lg:grid-cols-[25%_75%] gap-12 mb-30">
      <div class="lg:text-right">
        <h2 class="text-heading-md text-ink-light">About this blog</h2>
      </div>
      <div>
        <h1 class="text-hero text-ink mb-8">
          语言是思维的工具
        </h1>
        <p class="text-body-lg text-ink-light max-w-3xl">
          在这里记录关于语言、编程和思考的点滴。
        </p>
      </div>
    </section>

    <!-- 最新文章部分 - 非对称布局 -->
    <section class="grid lg:grid-cols-[25%_75%] gap-12">
      <div class="lg:text-right">
        <h2 class="text-heading-md text-ink-light sticky top-24">Blog posts</h2>
      </div>
      
      <div>
        {latestPosts.length > 0 ? (
          <div class="space-y-12">
            {latestPosts.map((post) => (
              <BlogCard post={post} />
            ))}
          </div>
        ) : (
          <div class="text-ink-light">
            暂无文章
          </div>
        )}

        <div class="mt-12">
          <a
            href="/blog"
            class="inline-block px-8 py-3 text-body font-medium text-ink underline decoration-accent hover:bg-accent hover:text-white hover:no-underline"
            style="transition: none;"
          >
            查看全部文章 →
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="zh" />
</BaseLayout>
