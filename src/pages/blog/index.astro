---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCard from '../../components/BlogCard.astro';

const title = '博客 | Xerox 的个人博客';
const description = '阅读我的所有技术文章和思考';

// 获取所有中文博客文章
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'zh' && !data.draft;
});

// 按日期排序
const posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title={title} description={description} lang="zh">
  <Header lang="zh" />
  
  <main class="container-custom py-18">
    <!-- 页面标题 - 非对称布局 -->
    <section class="grid lg:grid-cols-[25%_75%] gap-12 mb-30">
      <div class="lg:text-right">
        <h2 class="text-heading-md text-ink-light sticky top-24">All posts</h2>
       </div>
      <div>
        <h1 class="text-hero text-ink mb-6">
          博客文章
        </h1>
        <p class="text-body-lg text-ink-light">
          共 {posts.length} 篇文章
        </p>
      </div>
    </section>

    <!-- 文章列表 -->
    <section class="grid lg:grid-cols-[25%_75%] gap-12">
      <div></div>
      <div>
        {posts.length > 0 ? (
          <div class="space-y-6">
            {posts.map((post) => (
              <BlogCard post={post} />
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-ink-light">暂无文章</p>
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer lang="zh" />
</BaseLayout>
