---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags?: string[];
  lang?: 'zh' | 'en';
  translationKey?: string;
}

const { title, description, date, tags, lang = 'zh', translationKey } = Astro.props;
const t = useTranslations(lang);

// 格式化日期
const locale = lang === 'zh' ? 'zh-CN' : 'en-US';
const formattedDate = new Date(date).toLocaleDateString(locale, {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// 构建返回链接
const blogListUrl = lang === 'zh' ? '/blog' : '/en/blog';
const backToListText = lang === 'zh' ? '返回博客列表' : 'Back to Blog';
const publishedText = t('blog.published');

// JSON-LD 结构化数据 (Schema.org BlogPosting)
const authorName = lang === 'zh' ? '语言空间' : 'Language Space';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description,
  datePublished: date.toISOString(),
  dateModified: date.toISOString(),
  author: {
    '@type': 'Person',
    name: authorName,
  },
  publisher: {
    '@type': 'Organization',
    name: authorName,
    logo: {
      '@type': 'ImageObject',
      url: new URL('/favicon.ico', Astro.site).toString(),
    },
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': canonicalURL.toString(),
  },
  keywords: tags?.join(', '),
  inLanguage: lang === 'zh' ? 'zh-CN' : 'en-US',
};
---

<BaseLayout title={title} description={description} lang={lang} keywords={tags?.join(', ')}>
  <!-- JSON-LD 结构化数据 -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} is:inline slot="head" />
  
  <Header lang={lang} />
  
  <article class="container-custom py-18">
    <!-- 文章标题区域 - 非对称布局 -->
    <header class="grid lg:grid-cols-[25%_75%] gap-12 mb-30">
      <div></div>
      <div>
        <h1 class="text-post-title text-ink mb-30">
          {title}
        </h1>
      </div>
    </header>

    <!-- 文章内容区域 - 非对称布局 -->
    <div class="grid lg:grid-cols-[25%_75%] gap-12">
      <!-- 左侧元数据 - Sticky 定位 -->
      <aside class="lg:text-right">
        <div class="sticky top-24 space-y-6">
          <div>
            <p class="text-label text-ink-light mb-2">{publishedText}</p>
            <time class="text-body text-ink font-medium" datetime={date.toISOString()}>
              {formattedDate}
            </time>
          </div>

          {tags && tags.length > 0 && (
            <div>
              <p class="text-label text-ink-light mb-3">{lang === 'zh' ? '标签' : 'Tags'}</p>
              <div class="flex flex-wrap gap-2 lg:justify-end">
                {tags.map((tag: string) => (
                  <span class="text-label text-ink font-medium">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      </aside>

      <!-- 右侧文章内容 -->
      <div class="prose prose-slate max-w-none">
        <slot />
      </div>
    </div>

    <!-- 底部导航 - 大色块效果 -->
    <div class="grid lg:grid-cols-[25%_75%] gap-12 mt-30 pt-18 border-t border-ink/10">
      <div></div>
      <div>
        <a 
          href={blogListUrl} 
          class="inline-block px-8 py-4 text-body font-medium text-ink underline decoration-accent hover:bg-accent hover:text-white hover:no-underline"
          style="transition: none;"
        >
          ← {backToListText}
        </a>
      </div>
    </div>
  </article>
  
  <Footer lang={lang} />
</BaseLayout>
